@model Client.DataTransferObjects.Grades.GradeDtoGenerateScore

@{
    Layout = "_LayoutDashboard";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Create</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/Dashboard/Index">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="~/Grade/Index">Grade</a>
                </li>
                <li class="breadcrumb-item active">
                    <a href="~/Grade/Create">Create Grade</a>
                </li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Create Grade Form</h5>
                        <p>Welcome to the Create Grade Form! This form allows you to assign grades to employees who have successfully completed the boot camp. You can then input the grade in the form below, which typically uses a numerical scale in range 0 - 100. Thank you for using our application.</p>

                        <!-- Custom Styled Validation -->
                        <form action="/grade/create" method="post" class="row g-3 needs-validation" novalidate>
                            <div class="form-group">
                                <label for="validationCustom02" class="form-label">Score Segment 1</label>
                                <input asp-for="ScoreSegment1" type="number" min="0" max="100" class="form-control" id="validationCustom02" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter score segment 1 between 0 - 100!
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="validationCustom03" class="form-label">Score Segment 2</label>
                                <input asp-for="ScoreSegment2" type="number" min="0" max="100" class="form-control" id="validationCustom03" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter score segment 2 between 0 - 100!
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="validationCustom04" class="form-label">Score Segment 3</label>
                                <input asp-for="ScoreSegment3" type="number" min="0" max="100" class="form-control" id="validationCustom04" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter score segment 3 between 0 - 100!
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="validationCustom05" class="form-label">Score Segment 4</label>
                                <input asp-for="ScoreSegment4" type="number" min="0" max="100" class="form-control" id="validationCustom05" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter score segment 4 between 0 - 100!
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" type="submit">Submit form</button>
                                <a class="btn btn-info" asp-action="Index">Back to List</a>
                            </div>
                        </form><!-- End Custom Styled Validation -->

                    </div>
                </div>
          
            </div>
        </div>
    </section>

</main><!-- End #main -->