@model Client.DataTransferObjects.Grades.GradeDtoGet

@{
    ViewData["Title"] = "Update";
    Layout = "_LayoutDashboard";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Update</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/Dashboard/Index">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="~/Grade/Index">Grade</a>
                </li>
                <li class="breadcrumb-item active">
                    <a href="~/Grade/Update?guid=@Model.Guid">Update Grade</a>
                </li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Update Grade Form</h5>
                        <p>Welcome to the Update Grade Form! This form allows you to modify and update the grades of employees who have completed the boot camp. You can then input the grade in the form below, which typically uses a numerical scale in range 0 - 100. The evaluation process consists of four segments, each carrying a specific weight in the overall assessment. Segments 1, 2, and 3 are each weighted at 16.6%, while Segment 4 holds a significant weight of 50% in the final evaluation. Thank you for using our application.</p>

                        <!-- Custom Styled Validation -->
                        <form action="/grade/update" method="post" class="row g-3 needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="validationCustom02" class="form-label">Score Segment 1</label>
                                <input asp-for="ScoreSegment1" type="number" min="0" max="100" class="form-control" id="validationCustom02" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter score segment 1 between 0 - 100!
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="validationCustom03" class="form-label">Score Segment 2</label>
                                <input asp-for="ScoreSegment2" type="number" min="0" max="100" class="form-control" id="validationCustom03" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter score segment 2 between 0 - 100!
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="validationCustom04" class="form-label">Score Segment 3</label>
                                <input asp-for="ScoreSegment3" type="number" min="0" max="100" class="form-control" id="validationCustom04" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter score segment 3 between 0 - 100!
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="validationCustom05" class="form-label">Score Segment 4</label>
                                <input asp-for="ScoreSegment4" type="number" min="0" max="100" class="form-control" id="validationCustom05" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="invalid-feedback">
                                Please enter score segment 4 between 0 - 100!
                            </div>
                            <div class="form-group" hidden>
                                <label for="validationCustom06" class="form-label">Guid</label>
                                <input asp-for="Guid" type="text" class="form-control" id="validationCustom06" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="form-group" hidden>
                                <label for="validationCustom07" class="form-label">Totalscore</label>
                                <input asp-for="TotalScore" type="text" class="form-control" id="validationCustom07" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="form-group" hidden>
                                <label for="validationCustom07" class="form-label">grade</label>
                                <input asp-for="GradeLevel" type="text" class="form-control" id="validationCustom07" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" type="submit">Submit form</button>
                                <a class="btn btn-info" asp-action="Index">Back to List</a>
                            </div>
                        </form><!-- End Custom Styled Validation -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->

