@using Client.DataTransferObjects.Jobs
@model IEnumerable<Client.DataTransferObjects.Interviews.InterviewDtoGet>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutDashboard";
}

<h1>Index</h1>

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Data Tables</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="index.html">Home</a>
                </li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Datatables Employee</h5>
                        <a href="/interview/create">
                            <button class="btn btn-primary" style="margin-bottom: 15px">
                                <i class="bi bi-plus-square"></i> Create
                            </button>
                        </a>
                        <!-- Table with stripped rows -->
                        <table id="data-table" class="table table-striped" style="width:100%">
                            <thead>
                            <tr>
                                <th scope="col">
                                    @Html.DisplayName("No")
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Link)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.InterviewDate)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.StatusInterview)
                                </th>
                                <th scope="col">
                                    @Html.DisplayName("Job")
                                </th>
                                <th scope="col">
                                    @Html.DisplayName("Action")
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @{
                                var i = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @{
                                        var culture = new System.Globalization.CultureInfo("id-ID");
                                    }
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Link)
                                    </td>
                                    <td>

                                        @{
                                            var interviewDate = item.InterviewDate.ToString("dd MMMM yyyy", culture);
                                        }
                                        @Html.DisplayFor(modelItem => interviewDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StatusInterview)
                                    </td>
                                    <td>
                                        @{
                                            foreach (var job in (IEnumerable<JobDtoGet>)ViewData["Jobs"])
                                            {
                                                if (item.JobGuid == job.Guid)
                                                {
                                                    @job.JobName
                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        <form action="/interview/update" method="get">
                                            <input type="hidden" value="@item.Guid" name="guid"/>
                                            <button type="submit" class="btn btn-primary" style="margin: 2px">
                                                <i class="ri-edit-box-fill"></i>
                                            </button>
                                        </form>
                                        <form action="/interview/delete" method="post">
                                            <input type="hidden" value="@item.Guid" name="guid"/>
                                                <button type="submit" class="btn btn-danger delete-button" style="margin: 2px">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                i++;
                            }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
