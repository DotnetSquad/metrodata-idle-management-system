@using Client.DataTransferObjects.Jobs
@model Client.DataTransferObjects.Interviews.InterviewDtoGet

@{
    Layout = "_LayoutDashboard";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Update Form</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/Dashboard/Index">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="~/Interview/Index">Interview</a>
                </li>
                <li class="breadcrumb-item active">
                    <a href="~/Interview/Update?guid=@Model.Guid">Update Interview</a>
                </li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Update Interview Form</h5>
                        <p>Welcome to the "Update Interview" form! This form allows you to modify and update existing interview listings in our system. Please make sure to make accurate and relevant changes to ensure that the interview information remains up-to-date. Click the "Submit Form" button to update the interview listing. Thank you for using our application!.</p>

                        <!-- Custom Styled Validation -->
                        <form action="/interview/update" method="post" class="row g-3 needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            <div class="col-md-6" hidden>
                                <label for="validationCustom01" class="form-label">Title</label>
                                <input asp-for="Guid" type="text" class="form-control" id="validationCustom01" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="validationCustom01" class="form-label">Title</label>
                                <input asp-for="Title" type="text" class="form-control" id="validationCustom01" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="validationCustom01" class="form-label">Link</label>
                                <input asp-for="Link" type="text" class="form-control" id="validationCustom01" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="validationCustom05" class="form-label">Interview Date</label>
                                <input asp-for="InterviewDate" type="datetime-local" class="form-control" id="validationCustom05" required>
                                <div class="invalid-feedback">
                                    Please enter your hiring date!
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label for="validationCustom01" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" style="height: 100px" id="validationCustom01"></textarea>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="validationCustom08" class="form-label">Status</label>
                                <select asp-for="StatusInterview" class="form-control" id="validationCustom08" required>
                                    <option selected disabled value="">Choose...</option>
                                    <option value="0">Pending</option>
                                    <option value="1">Accepted</option>
                                    <option value="2">Rejected</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select your status!
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="validationCustom04" class="form-label">Job</label>
                                <select asp-for="JobGuid" class="form-select" id="validationCustom04" required>
                                    <option disabled value="">Choose...</option>
                                    @* foreach view bag companies *@
                                    @{
                                        foreach (var item in (IEnumerable<JobDtoGet>)ViewData["Jobs"])
                                        {
                                            <option selected value="@item.Guid">@item.JobName</option>
                                        }
                                    }
                                </select>
                                <div class="invalid-feedback">
                                    Please select a valid state.
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Submit form</button>
                            </div>
                        </form><!-- End Custom Styled Validation -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
