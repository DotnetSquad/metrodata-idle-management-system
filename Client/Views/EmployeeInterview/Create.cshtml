@using Client.DataTransferObjects.Employees;
@using Client.DataTransferObjects.Interviews;
@model Client.DataTransferObjects.EmployeeInterviews.EmployeeInterviewDtoCreate

@{
    Layout = "_LayoutDashboard";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Validation</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/Dashboard/Index">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="~/EmployeeInterview/Index">Interview Management</a>
                </li>
                <li class="breadcrumb-item active">
                    <a href="~/EmployeeInterview/Create">Create Interview Management</a>
                </li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Create Interview Management Form</h5>
                        <p>This form allows you to manage the interview process for prospective candidates seeking employment with client's company. Please provide the necessary information to facilitate the interview process. Thank you for your cooperation in making the interview process seamless and efficient.</p>

                        <!-- Custom Styled Validation -->
                        <form action="/employeeinterview/create" method="post" class="row g-3 needs-validation" novalidate>
                            <div class="col-md-6">
                                <label for="employeeGuid" class="form-label">Employee Name</label>
                                <select asp-for="EmployeeGuid" class="form-select" id="employeeGuid" required>
                                    <option selected disabled value="">Choose...</option>
                                    @* foreach view bag employee *@
                                    @{
                                        foreach (var item in (IEnumerable<EmployeeDtoGet>)ViewData["Employees"])
                                        {
                                            <option value="@item.Guid">@item.FirstName @item.LastName</option>
                                        }
                                    }
                                </select>
                                <div class="invalid-feedback">
                                    Please select a valid state.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="interviewGuid" class="form-label">Interview Title</label>
                                <select asp-for="InterviewGuid" class="form-select" id="interviewGuid" required>
                                    <option selected disabled value="">Choose...</option>
                                    @* foreach view bag companies *@
                                    @{
                                        foreach (var item in (IEnumerable<InterviewDtoGet>)ViewData["Interviews"])
                                        {
                                            <option value="@item.Guid">@item.Title</option>
                                        }
                                    }
                                </select>
                                <div class="invalid-feedback">
                                    Please select a valid state.
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Submit form</button>
                            </div>
                        </form><!-- End Custom Styled Validation -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->