@model Client.DataTransferObjects.Roles.RoleDtoGet

@{
    Layout = "_LayoutDashboard";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Create</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/Dashboard/Index">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="~/Role/Index">Role</a>
                </li>
                <li class="breadcrumb-item active">
                    <a href="~/Role/Create">Create Role</a>
                </li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Create Role Form</h5>
                        <p>Welcome to the Create Role Form! This form allows you to add a new role to the system. Roles are essential for defining the permissions and access levels of users within the application. By creating a new role, you can customize and assign specific privileges to users, such as administrators, managers, or regular users. To get started, please fill out the required information in the form below. Once you submit the form, the new role will be added to the system, and you can then assign this role to users as needed. Thank you for using our application.</p>

                        <!-- Custom Styled Validation -->
                        <form action="/role/create" method="post" class="row g-3 needs-validation" novalidate>
                            <div class="col-md-4">
                                <label for="validationCustom01" class="form-label">Role</label>
                                <input asp-for="Name" type="text" class="form-control" id="validationCustom01" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Submit form</button>
                            </div>
                        </form><!-- End Custom Styled Validation -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
