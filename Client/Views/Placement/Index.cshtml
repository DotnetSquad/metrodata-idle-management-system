@using Client.DataTransferObjects.Companies;
@using Client.DataTransferObjects.Employees;
@model IEnumerable<Client.DataTransferObjects.Placements.PlacementDtoGet>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutDashboard";
    var successMessage = TempData["Success"] as string;
    var failMessage = TempData["Error"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            toastr.options = {
                "positionClass": "toast-top-right",
                "closeButton": true,
                "progressBar": true,
                "timeOut": 3000
            };

            toastr.success('@successMessage');
        });
    </script>
}

@if (!string.IsNullOrEmpty(failMessage))
{
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            toastr.options = {
                "positionClass": "toast-top-right",
                "closeButton": true,
                "progressBar": true,
                "timeOut": 3000
            };

            toastr.error('@failMessage');
        });
    </script>
}

<h1>Index</h1>

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Data Tables</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/Dashboard/Index">Home</a>
                </li>
                <li class="breadcrumb-item active">
                    <a href="~/Placement/Index">Placement</a>
                </li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Datatables Employee</h5>
                        <a href="/placement/create">
                            <button class="btn btn-primary" style="margin-bottom: 15px">
                                <i class="bi bi-plus-square"></i> Create
                            </button>
                        </a>
                        <!-- Table with stripped rows -->
                        <table id="data-table" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        @Html.DisplayName("No")
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayName("Employee")
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayName("Company")
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayName("Action")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @{
                                            var culture = new System.Globalization.CultureInfo("id-ID");
                                        }
                                        <td>
                                            @i
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @{
                                                foreach (var employee in (IEnumerable<EmployeeDtoGet>)ViewData["Employees"])
                                                {
                                                    var fullName = $"{employee.FirstName} {employee.LastName}";
                                                    if (item.EmployeeGuid == employee.Guid)
                                                    {
                                                        @Html.DisplayFor(x => fullName)
                                                    }
                                                }
                                            }
                                        </td>
                                        <td>
                                            @{
                                                foreach (var company in (IEnumerable<CompanyDtoGet>)ViewData["Companies"])
                                                {
                                                    if (item.CompanyGuid == company.Guid)
                                                    {
                                                        @company.CompanyName
                                                    }
                                                }
                                            }
                                        </td>
                                        <td>
                                            <form action="/placement/update" method="get">
                                                <input type="hidden" value="@item.Guid" name="guid" />
                                                <button type="submit" class="btn btn-primary" style="margin: 2px">
                                                    <i class="ri-edit-box-fill"></i>
                                                </button>
                                            </form>
                                            <form action="/placement/delete" method="post">
                                                <input type="hidden" value="@item.Guid" name="guid" />
                                                <button type="submit" class="btn btn-danger delete-button" style="margin: 2px">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
