@using Client.DataTransferObjects.Employees
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Client.DataTransferObjects.Companies
@model Client.DataTransferObjects.Placements.PlacementDtoGet

@{
    Layout = "_LayoutDashboard";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Validation</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/Dashboard/Index">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="~/Placement/Index">Placement</a>
                </li>
                <li class="breadcrumb-item active">
                    <a href="~/Placement/Create">Create Placement</a>
                </li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Create Placement Form</h5>
                        <p>Welcome to the "Create Placement" form! This form allows you to create and add new placement listings to our system. Please fill out all the required fields accurately to ensure the correct information is captured and click the "Submit Form" button to add the placement listing. Thank you for using our application!.</p>
                        
                        <!-- Custom Styled Validation -->
                        <form action="/placement/create" method="post" class="row g-3 needs-validation" novalidate>
                            <div class="col-md-6">
                                <label for="validationCustom01" class="form-label">Title</label>
                                <input asp-for="Title" type="text" class="form-control" id="validationCustom01" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="validationCustom02" class="form-label">Description</label>
                                <input asp-for="Description" type="text" class="form-control" id="validationCustom02" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="validationCustom04" class="form-label">Employee</label>
                                <select asp-for="EmployeeGuid" class="form-select" id="validationCustom04" required>
                                    <option selected disabled value="">Choose...</option>
                                    @* foreach view bag employee *@
                                    @{
                                        foreach(var item in (IEnumerable<EmployeeDtoGet>)ViewData["Employees"])
                                        {
                                            <option value="@item.Guid">@item.FirstName @item.LastName</option>
                                        }
                                    }
                                </select>
                                <div class="invalid-feedback">
                                    Please select a valid state.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="validationCustom04" class="form-label">Company</label>
                                <select asp-for="CompanyGuid" class="form-select" id="validationCustom04" required>
                                    <option selected disabled value="">Choose...</option>
                                    @* foreach view bag companies *@
                                    @{
                                        foreach(var item in (IEnumerable<CompanyDtoGet>)ViewData["Companies"])
                                        {
                                            <option value="@item.Guid">@item.CompanyName</option>
                                        }
                                    }
                                </select>
                                <div class="invalid-feedback">
                                    Please select a valid state.
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Submit form</button>
                            </div>
                        </form><!-- End Custom Styled Validation -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
