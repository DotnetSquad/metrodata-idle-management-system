@model IEnumerable<Client.DataTransferObjects.Employees.EmployeeDtoGet>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutDashboard";
}

<h1>Index</h1>

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Data Tables</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="index.html">Home</a>
                </li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Datatables Employee</h5>
                        <a href="/employee/create">
                            <button class="btn btn-primary" style="margin-bottom: 15px">
                                <i class="bi bi-plus-square"></i> Create
                            </button>
                        </a>

                        <!-- Table with stripped rows -->
                        <table id="data-table" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        @Html.DisplayName("No")
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Nik)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayName("Full Name")
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.BirthDate)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Gender)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.HiringDate)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.PhoneNumber)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayName("Grade")
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayName("Profile")
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayName("Action")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @{
                                            var culture = new System.Globalization.CultureInfo("id-ID");
                                        }
                                        <td>
                                            @i
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nik)
                                        </td>
                                        <td>
                                            @{
                                                var fullName = $"{item.FirstName} {item.LastName}";
                                            }
                                            @Html.DisplayFor(x => fullName)
                                        </td>
                                        <td>

                                            @{
                                                var formatBirthDate = item.BirthDate.ToString("dd MMMM yyyy", culture);
                                            }
                                            @Html.DisplayFor(modelItem => formatBirthDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Gender)
                                        </td>
                                        <td>
                                            @{
                                                var formatHiringDate = item.HiringDate.ToString("dd MMMM yyyy", culture);
                                            }
                                            @Html.DisplayFor(modelItem => formatHiringDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td>
                                            @Html.DisplayName("A")
                                        </td>
                                        <td>
                                            @Html.DisplayName("Profile")
                                        </td>
                                        <td>
                                            <button type="submit" class="btn btn-primary"><i class="ri-edit-box-fill"></i></button>
                                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
