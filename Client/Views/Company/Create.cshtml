@model Client.DataTransferObjects.Companies.CompanyDtoGet

@{
    Layout = "_LayoutDashboard";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Create</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/Dashboard/Index">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="~/Company/Index">Company</a>
                </li>
                <li class="breadcrumb-item">
                     <a href="~/Company/Create">Create Company</a>
                </li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Create Company Form</h5>
                        <p>Welcome to the "Create Company" form! This form allows you to create and add new company listings to our system. Please fill out all the required fields accurately to ensure the correct information is captured.</p>
                        <p>Once you have filled out all the required fields, click the "Submit Form" button to add the company listing. If there are any errors, the system will prompt you to correct them before submitting. Thank you for using our "Create Company" form!</p>

                        <!-- Custom Styled Validation -->
                        <form action="/company/create" method="post" class="row g-3 needs-validation" novalidate>
                            <div class="col-md-6">
                                <label for="validationCustom01" class="form-label">Company Name</label>
                                <input asp-for="CompanyName" type="text" class="form-control" id="validationCustom01" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter company name!
                                </div>
                            </div>
                            <div class="col-md-8">
                                <label for="validationCustom02" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" id="validationCustom02" required rows="5" cols="10"></textarea>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter description!
                                </div>
                            </div>
                            <div class="col-md-8">
                                <label for="validationCustom03" class="form-label">Address</label>
                                <textarea asp-for="Address" class="form-control" id="validationCustom03" required rows="5" cols="10"></textarea>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter address!
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="Submit">Submit Form</button>
                            </div>
                        </form><!-- End Custom Styled Validation -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->